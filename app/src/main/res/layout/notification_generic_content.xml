<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="@dimen/feed_card_horizontal_padding"
    android:paddingEnd="@dimen/feed_card_horizontal_padding" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingEnd="@dimen/notification_topitems_padding"
                android:id="@+id/not_app_icon"
                android:tint="@color/textColorPrimary"
                android:layout_width="24dp"
                android:layout_height="24dp"
                tools:src="@drawable/ic_settings_outline_28" />

            <TextView
                android:id="@+id/not_app_name"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/textColorPrimary"
                android:layout_height="match_parent"
                tools:text="App name" />

            <TextView
                android:layout_marginStart="@dimen/notification_topitems_padding"
                android:id="@+id/not_app_subtitle"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="@color/textColorSecondary"
                android:layout_height="match_parent"
                tools:text="Subtitle" />
        </LinearLayout>

        <TextView
            android:layout_marginStart="@dimen/notification_topitems_padding"
            android:id="@+id/not_app_date"
            android:layout_width="wrap_content"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textColor="@color/textColorSecondary"
            android:layout_height="match_parent"
            tools:text="Date" />
    </LinearLayout>

    <TextView
        android:id="@+id/not_title"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Notification title" />

    <TextView
        android:id="@+id/not_text"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorSecondary"
        tools:text="Notification text" />
</LinearLayout>